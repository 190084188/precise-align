<Window x:Class="PreciseAlign.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreciseAlign.Test"
        xmlns:ctrl="clr-namespace:PreciseAlign.Controls;assembly=PreciseAlign.Controls"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:PreciseAlign.Test.ViewModels"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button Content="生成ROI" Command="{Binding GenerateRoiCommand}" Margin="5" Padding="10,5"/>
            <Button Content="加载图像1 (512x512)" Command="{Binding LoadImage1Command}" Margin="5" Padding="10,5"/>
            <Button Content="加载图像2 (600x800)" Command="{Binding LoadImage2Command}" Margin="5" Padding="10,5"/>
            <Button Content="清空所有" Command="{Binding ClearAllCommand}" Margin="5" Padding="10,5"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
            <ctrl:HImageWindow 
                Image="{Binding Image}" 
                Graphics="{Binding Graphics}" />
        </Border>
    </Grid>
</Window>
