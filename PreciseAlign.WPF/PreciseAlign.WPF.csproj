<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
	<UseWindowsForms>true</UseWindowsForms>
    <ApplicationIcon>Assets\Images\boe_logo.ico</ApplicationIcon>
    <Platforms>AnyCPU;x64</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="新文件夹\**" />
    <EmbeddedResource Remove="新文件夹\**" />
    <None Remove="新文件夹\**" />
    <Page Remove="新文件夹\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\Images\boe_logo.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <PackageReference Include="ini-parser" Version="2.5.2" />
    <PackageReference Include="log4net" Version="3.2.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.9" />
    <PackageReference Include="Microsoft.Extensions.Logging.Log4Net.AspNetCore" Version="8.0.0" />
    <PackageReference Include="NModbus" Version="3.0.81" />
    <PackageReference Include="System.Drawing.Common" Version="10.0.0-rc.2.25502.107" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PreciseAlign.Controls\PreciseAlign.Controls.csproj" />
    <ProjectReference Include="..\PreciseAlign.Core\PreciseAlign.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="AxAltairUDrv">
      <HintPath>Assemblies\AltairDll\AxAltairUDrv.dll</HintPath>
      <EmbedInteropTypes>False</EmbedInteropTypes>
      <Private>True</Private>
    </Reference>
    <Reference Include="AxAltairUDrvAsm4.5">
      <HintPath>Assemblies\AltairDll\AxAltairUDrvAsm4.5.dll</HintPath>
      <Private>True</Private>
      <EmbedInteropTypes>False</EmbedInteropTypes>
    </Reference>
    <Reference Include="AxOvkBase">
      <HintPath>Assemblies\AltairDll\AxOvkBase.dll</HintPath>
      <Private>True</Private>
      <EmbedInteropTypes>False</EmbedInteropTypes>
    </Reference>
    <Reference Include="AxOvkBaseAsm4.5">
      <HintPath>Assemblies\AltairDll\AxOvkBaseAsm4.5.dll</HintPath>
      <Private>True</Private>
      <EmbedInteropTypes>False</EmbedInteropTypes>
    </Reference>
    <Reference Include="halcondotnet">
      <HintPath>Assemblies\HalconDll\halcondotnet.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="Config\Config.ini">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="log4net.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<!-- 确保目标目录存在，如果不存在则创建 -->
		<MakeDir Directories="$(TargetDir)Config" Condition="!Exists('$(TargetDir)Config')" />
		<!-- 执行 xcopy 命令 -->
		<Exec Command="xcopy /s /e /y &quot;$(ProjectDir)Config&quot; &quot;$(TargetDir)Config&quot;" />
	</Target>

</Project>
