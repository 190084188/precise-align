<Window x:Class="PreciseAlign.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreciseAlign.WPF.Views" 
        xmlns:viewmodels="clr-namespace:PreciseAlign.WPF.ViewModels"
        mc:Ignorable="d"
        Title="PreciseAlign Pro - COG对位系统" 
        Height="800" Width="1280"
        WindowStartupLocation="CenterScreen"
        MinWidth="1024" MinHeight="768">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
        </Style>

        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Background" Value="{DynamicResource ContentBackgroundBrush}"/>
        </Style>

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E3E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MainControlButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentMouseOverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ProcessStepButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ContentBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3F3F3F"/>
                </Trigger>
                <Trigger Property="Tag" Value="Current">
                    <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Grid.RowSpan="2" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4"/>
                            <TextBlock Text="{TemplateBinding Header}" 
                                       FontWeight="Bold" 
                                       Foreground="{DynamicResource ForegroundSubtleBrush}"
                                       Margin="10,-8,0,0" 
                                       VerticalAlignment="Top"
                                       Background="{DynamicResource AppBackgroundBrush}"
                                       Padding="5,0"
                                       Panel.ZIndex="1"/>
                            <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource AppBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource ContentBackgroundBrush}" CornerRadius="0" BorderThickness="0,0,0,1">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="PreciseAlign Pro" FontSize="18" FontWeight="SemiBold" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="当前配方:" Foreground="{DynamicResource ForegroundSubtleBrush}" Margin="0,0,10,0"/>
                    <ComboBox Width="150" SelectedIndex="0" VerticalAlignment="Center">
                        <ComboBoxItem Content="G1234-56"/>
                        <ComboBoxItem Content="M9876-21"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Margin="0,0,5,0"><Run Text="PLC:"/><Run Text=" 🟢" Foreground="{DynamicResource StatusGreenBrush}"/></TextBlock>
                    <TextBlock Margin="10,0,5,0"><Run Text="PC:"/><Run Text=" 🟢" Foreground="{DynamicResource StatusGreenBrush}"/></TextBlock>
                    <TextBlock Text="用户:Admin" Margin="15,0,0,0"/>
                    <Button Content="⚙" ToolTip="设置" Style="{DynamicResource IconButton}" Margin="15,0,0,0"/>
                    <Button x:Name="ThemeToggleButton" Content="🌙" ToolTip="切换主题" Style="{DynamicResource IconButton}" Margin="5,0,0,0" Click="ThemeToggleButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="(1) ACF对位" Style="{DynamicResource ProcessStepButton}" Tag="Current"/>
            <Path Data="M0,0 L10,10 L0,20 Z" Stroke="{DynamicResource ForegroundSubtleBrush}" StrokeThickness="1" Margin="10,0" VerticalAlignment="Center"/>
            <Button Content="(2) ACF贴附后检查" Style="{DynamicResource ProcessStepButton}"/>
            <Path Data="M0,0 L10,10 L0,20 Z" Stroke="{DynamicResource ForegroundSubtleBrush}" StrokeThickness="1" Margin="10,0" VerticalAlignment="Center"/>
            <Button Content="(3) COG对位" Style="{DynamicResource ProcessStepButton}"/>
        </StackPanel>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Margin="0,0,5,0">
                    <Grid>
                        <Image Source="{Binding Camera1ImageSource}" Stretch="Uniform" />
                        <TextBlock Text="Camera 1 (左Mark)" Margin="10" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5">
                            <StackPanel.Resources>
                                <Style TargetType="Button" BasedOn="{StaticResource IconButton}">
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Width" Value="28"/>
                                    <Setter Property="Height" Value="28"/>
                                    <Setter Property="Background" Value="#80000000"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="🔍+" ToolTip="放大"/>
                            <Button Content="1:1" ToolTip="1:1显示" Margin="5,0"/>
                            <Button Content="🔒" ToolTip="锁定画面"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border Grid.Column="1" Margin="5,0,0,0">
                    <Grid>
                        <Image Source="{Binding Camera2ImageSource}" Stretch="Uniform" />
                        <TextBlock Text="Camera 2 (右Mark)" Margin="10" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5">
                            <StackPanel.Resources>
                                <Style TargetType="Button" BasedOn="{StaticResource IconButton}">
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Width" Value="28"/>
                                    <Setter Property="Height" Value="28"/>
                                    <Setter Property="Background" Value="#80000000"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="🔍+" ToolTip="放大"/>
                            <Button Content="1:1" ToolTip="1:1显示" Margin="5,0"/>
                            <Button Content="🔒" ToolTip="锁定画面"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            <DockPanel Grid.Column="1">
                <GroupBox Header="参数教导 (Teach)" DockPanel.Dock="Top">
                    <UniformGrid Columns="2" Rows="1">
                        <Button Content="教导参数 0 (相机1)" Style="{DynamicResource MainControlButton}" Margin="2"/>
                        <Button Content="教导参数 1 (相机2)" Style="{DynamicResource MainControlButton}" Margin="2"/>
                    </UniformGrid>
                </GroupBox>
                <GroupBox Header="实时数据" DockPanel.Dock="Top" Margin="0,10,0,0">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="X:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="123.456 mm" Margin="5,0"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="ΔX:" FontWeight="Bold" Foreground="{DynamicResource StatusGreenBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="+0.002 mm" Margin="5,0" Foreground="{DynamicResource StatusGreenBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Y:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="78.901 mm" Margin="5,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="ΔY:" FontWeight="Bold" Foreground="{DynamicResource StatusRedBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="-0.001 mm" Margin="5,0" Foreground="{DynamicResource StatusRedBrush}"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="θ:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="0.000 deg" Margin="5,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="Δθ:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="2" Grid.Column="3" Text="+0.001 deg" Margin="5,0"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="运行日志" Margin="0,10,0,0">
                    <ListView Background="Transparent" BorderThickness="0" Foreground="{DynamicResource ForegroundSubtleBrush}">
                        <ListViewItem Content="12:06:50 [INFO] 设备初始化完成"/>
                        <ListViewItem Content="12:06:48 [INFO] PLC连接成功"/>
                        <ListViewItem Content="12:06:45 [ERROR] 相机2连接失败: Not found" Foreground="{DynamicResource StatusRedBrush}"/>
                    </ListView>
                </GroupBox>
            </DockPanel>
        </Grid>

        <StatusBar Grid.Row="3" Background="{DynamicResource AccentBrush}">
            <StatusBarItem>
                <TextBlock Text="状态: 空闲" Foreground="White" FontWeight="Bold"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="节拍: 0.00s" Foreground="White"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="良率: N/A" Foreground="White"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding CurrentTime}" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>