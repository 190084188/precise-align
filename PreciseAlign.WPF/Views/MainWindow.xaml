<Window x:Class="PreciseAlign.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreciseAlign.WPF"
        mc:Ignorable="d"
        Title="PreciseAlign Pro - High Precision Visual Alignment System" 
        Height="800" Width="1280"
        WindowStartupLocation="CenterScreen"
        MinWidth="1024" MinHeight="768"
        Foreground="{StaticResource ForegroundBrush}"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <SolidColorBrush x:Key="AppBackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#4A4A4A"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#E1E1E1"/>
        <SolidColorBrush x:Key="ForegroundSubtleBrush" Color="#A0A0A0"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="AccentMouseOverBrush" Color="#1F93E0"/>
        <SolidColorBrush x:Key="StatusGreenBrush" Color="#388E3C"/>
        <SolidColorBrush x:Key="StatusRedBrush" Color="#D32F2F"/>

        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Background" Value="{StaticResource ContentBackgroundBrush}"/>
        </Style>

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E3E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MainControlButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentMouseOverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ProcessStepButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ContentBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3F3F3F"/>
                </Trigger>
                <Trigger Property="Tag" Value="Current">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Grid.RowSpan="2" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4"/>
                            <TextBlock Text="{TemplateBinding Header}" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource ForegroundSubtleBrush}"
                                       Margin="10,0,0,0" 
                                       VerticalAlignment="Center"
                                       Background="{StaticResource AppBackgroundBrush}"
                                       Panel.ZIndex="1"/>
                            <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource ContentBackgroundBrush}" CornerRadius="0" BorderThickness="0,0,0,1">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="PreciseAlign Pro" FontSize="18" FontWeight="SemiBold" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="当前配方:" Foreground="{StaticResource ForegroundSubtleBrush}" Margin="0,0,10,0"/>
                    <ComboBox Width="150" SelectedIndex="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ComboBoxItem Content="G1234-56"/>
                        <ComboBoxItem Content="M9876-21"/>
                        
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Margin="0,0,5,0"><Run Text="PLC:"/><Run Text="🟢" Foreground="{StaticResource StatusGreenBrush}"/></TextBlock>
                    <TextBlock Margin="10,0,5,0"><Run Text="PC:"/><Run Text="🟢" Foreground="{StaticResource StatusGreenBrush}"/></TextBlock>
                    <TextBlock Text="用户:Admin" Margin="15,0,0,0"/>
                    <Button Content="⚙" ToolTip="设置" Style="{StaticResource IconButton}" Margin="15,0,0,0"/>
                    <Button Content="🌙" ToolTip="切换主题" Style="{StaticResource IconButton}" Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="(1) 初始定位" Style="{StaticResource ProcessStepButton}" Tag="Current"/>
            <Path Data="M0,0 L10,10 L0,20 Z" Stroke="{StaticResource ForegroundSubtleBrush}" StrokeThickness="1" Margin="10,0" VerticalAlignment="Center"/>
            <Button Content="(2) 滴胶检查" Style="{StaticResource ProcessStepButton}"/>
            <Path Data="M0,0 L10,10 L0,20 Z" Stroke="{StaticResource ForegroundSubtleBrush}" StrokeThickness="1" Margin="10,0" VerticalAlignment="Center"/>
            <Button Content="(3) COG 贴附" Style="{StaticResource ProcessStepButton}"/>
        </StackPanel>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <Border>
                    <Grid>
                        <TextBlock Text="[ HALCON / HIKVISION CONTROL 1 ]" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForegroundSubtleBrush}"/>

                        <TextBlock Text="Camera 1 (左Mark)" Margin="10" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5">
                            <StackPanel.Resources>
                                <Style TargetType="Button" BasedOn="{StaticResource IconButton}">
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Width" Value="28"/>
                                    <Setter Property="Height" Value="28"/>
                                    <Setter Property="Background" Value="#80000000"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="🔍+" ToolTip="放大"/>
                            <Button Content="1:1" ToolTip="1:1显示" Margin="5,0"/>
                            <Button Content="🔒" ToolTip="锁定画面"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Margin="0,10,0,0">
                    <Grid>
                        <TextBlock Text="[ HALCON / HIKVISION CONTROL 2 ]" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForegroundSubtleBrush}"/>
                        <TextBlock Text="Camera 2 (右Mark)" Margin="10" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    </Grid>
                </Border>
            </StackPanel>

            <DockPanel Grid.Column="1">
                <GroupBox Header="设备主控" DockPanel.Dock="Top">
                    <UniformGrid Columns="3" Rows="1">
                        <Button Content="▶️ 循环启动" Style="{StaticResource MainControlButton}" Margin="2"/>
                        <Button Content="⏸️ 暂停" Style="{StaticResource MainControlButton}" Margin="2" IsEnabled="False"/>
                        <Button Content="⏹️ 停止" Style="{StaticResource MainControlButton}" Margin="2" Background="#B71C1C"/>
                    </UniformGrid>
                </GroupBox>

                <GroupBox Header="实时数据" DockPanel.Dock="Top" Margin="0,10,0,0">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="X:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="123.456 mm" Margin="5,0"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="ΔX:" FontWeight="Bold" Foreground="{StaticResource StatusGreenBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="+0.002 mm" Margin="5,0" Foreground="{StaticResource StatusGreenBrush}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Y:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="78.901 mm" Margin="5,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="ΔY:" FontWeight="Bold" Foreground="{StaticResource StatusRedBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="-0.001 mm" Margin="5,0" Foreground="{StaticResource StatusRedBrush}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="θ:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="0.000 deg" Margin="5,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="Δθ:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="2" Grid.Column="3" Text="+0.001 deg" Margin="5,0"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="运行日志" Margin="0,10,0,0">
                    <ListView Background="Transparent" BorderThickness="0" Foreground="{StaticResource ForegroundSubtleBrush}">
                        <ListViewItem Content="12:06:50 [INFO] 设备初始化完成"/>
                        <ListViewItem Content="12:06:48 [INFO] PLC连接成功"/>
                        <ListViewItem Content="12:06:45 [ERROR] 相机2连接失败: Not found" Foreground="{StaticResource StatusRedBrush}"/>
                    </ListView>
                </GroupBox>
            </DockPanel>

        </Grid>

        <StatusBar Grid.Row="3" Background="{StaticResource AccentBrush}">
            <StatusBarItem>
                <TextBlock Text="状态: 空闲" Foreground="White" FontWeight="Bold"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="节拍: 0.00s" Foreground="White"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="良率: N/A" Foreground="White"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="2025-09-29 00:06:50" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>