<Application x:Class="PreciseAlign.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PreciseAlign.WPF"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#2D2D2D"/>
            <SolidColorBrush x:Key="BorderBrush" Color="#4A4A4A"/>
            <SolidColorBrush x:Key="ForegroundBrush" Color="#E1E1E1"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
